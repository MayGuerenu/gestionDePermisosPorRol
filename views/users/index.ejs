<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Roles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

  <h1>Listado de Usuarios</h1>
  
  <a href="/users/new" class="btn btn-primary mb-2">Nuevo Usuario</a> <a href="/users/login" class="btn btn-primary mb-2">Login</a>

  <ul class="list-group">
    <% users.forEach(user => { %>
      <li class="list-group-item"><strong><%= user.user %></strong> — <%= user.email %> — <%= user.role_name || 'Sin rol' %></li>
    <% }) %>
  </ul>


</body>
</html>

