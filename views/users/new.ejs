<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Crear Usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

  <h1>Crear Usuario</h1>
  <form action="/users" method="POST">
    <label>Nombre: <input class="form-control mb-1" type="text" name="name" required /></label><br />
    <label>Email: <input class="form-control mb-1" type="email" name="email" required /></label><br />
    
    <label>Contrase√±a: 
      <input class="form-control mb-1" type="password" name="password" required/>
    </label><br />

    <label>Rol:
      <select class="form-select mt-2" name="role_id" required>
        <% roles.forEach(role => { %>
          <option value="<%= role.id %>"><%= role.name %></option>
        <% }) %>
      </select>
    </label><br />

    <button class="btn btn-primary mt-2" type="submit">Crear</button>
  </form>

  <a class="btn btn-secondary mt-2" href="/users">Volver a listado</a>

</body>
</html>
